<select id="checkCart" parameterType="_int"  resultType="com.project.dwine.cart.model.vo.Cart">
		SELECT
				CART_NO
			  , CART_COUNT
			  , USER_NO
			  , PRODUCT_NO
		  FROM CART
		  WHERE USER_NO = #{user_no}
		  AND PRODUCT_NO = #{product_no}
</select>
