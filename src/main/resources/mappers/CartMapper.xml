<select id="cartList" parameterType="_int"  resultMap="productDetailResultMap">
	SELECT
            P.PRODUCT_NO        
          , PRODUCT_KNAME
          , PRODUCT_ENAME
          , SALE_PRICE
          , PRODUCT_COUNT
          , THUMBNAIL
          , STATUS
          , C.USER_NO
          , C.PRODUCT_NO
          ,	C.CART_NO
		  , C.CART_COUNT
		FROM CART C
        LEFT JOIN PRODUCT P ON (C.PRODUCT_NO = P.PRODUCT_NO)
		WHERE USER_NO = #{user_no}
</select>












</mapper>